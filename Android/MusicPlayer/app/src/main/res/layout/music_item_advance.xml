<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:id="@+id/left_music_item_advance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/music_name_music_item_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌名"
            android:textSize="20sp"
            android:layout_weight="2"
            android:gravity="center|top"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/singer_music_item_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手名"
            android:layout_weight="1"
            android:gravity="center|top"
            />
    </LinearLayout>



    <Button
        android:id="@+id/bt_music_delete_music_item_advance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/music_delete"
        />

</LinearLayout>